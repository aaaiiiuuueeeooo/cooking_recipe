<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-9">
      <h2>新規会員登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table>
          <thead></thead>
          <tbody>
            <tr>
              <td><%= f.label :ハンドルネーム %></td><td><%= f.text_field :screen_name %></td>
            </tr>
            <tr>
              <td><%= f.label :メールアドレス %></td><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td><%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %></td><td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>

            </tr>
              <td><%= f.label :パスワード（確認用） %></td><td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
          </tbody>
        </table>
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>


