<h1>投稿編集画面</h1>
<%= form_with model: @recipe, local: true do |f| %>

<p><%= f.label :image, '画像' %><br>
<%= f.file_field :image, accept: "image/*" %>
</p>

<p><%= f.label :recipe_name, 'レシピ名' %><br>
<%= f.text_field :recipe_name %>
</p>

<p><%= f.label :introduction, 'レシピ説明文' %><br>
<%= f.text_area :introduction %>
</p>

<p>
    <%= f.submit '編集' %>
</p>

<% end %>